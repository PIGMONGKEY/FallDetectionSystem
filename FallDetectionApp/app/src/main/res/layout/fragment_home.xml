    <TextView
        android:id="@+id/app_name_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo_home"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="긴급 상황 신고 서비스"
        android:textAlignment="center"
        android:textColor="#F14559"
        android:textSize="35sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/app_name_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/toVideoButton"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_shape_round"
            android:drawableTop="@drawable/ic_video_big"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="영상재생"
            android:textColor="#F14559"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/toGuideButton"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_shape_round"
            android:backgroundTint="#ffffff"
            android:drawableTop="@drawable/ic_book_big"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="가이드보기"
            android:textColor="#F14559"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/toMyPageButton"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_shape_round"
            android:drawableTop="@drawable/ic_person_big"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="마이페이지"
            android:textColor="#F14559"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/toNotificationBoardButton"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_shape_round"
            android:drawableTop="@drawable/ic_notice_big"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="공지사항"
            android:textColor="#F14559"
            android:textSize="20sp"
            android:textStyle="bold" />
