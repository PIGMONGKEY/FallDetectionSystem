<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    android:keepScreenOn="true"
    tools:context=".register.NokPhoneActivity">

    <ImageView
        android:id="@+id/logo_register_nokphone"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/app_name_register_nokphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logo_register_nokphone"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="긴급 상황 신고 서비스"
        android:textAlignment="center"
        android:textColor="#F14559"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nokPhone_1_EditText_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/app_name_register_nokphone"
        android:background="#B1B1B1"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="보호자 연락처 1"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/add_nokphone_button_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/button_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nokPhone_1_EditText_register"
        app:srcCompat="@drawable/ic_add" />

    <EditText
        android:id="@+id/nokPhone_2_EditText_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/nokPhone_1_EditText_register"
        android:background="#B1B1B1"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="보호자 연락처 2"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/finishButton_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#F14559"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>