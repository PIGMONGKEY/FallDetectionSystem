<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@drawable/background"
    tools:context=".fragments.MyPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context=".MyPageActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F14559"
                android:text="마이페이지"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_shape_round"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profileImageView_myPage"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_margin="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameTextView_myPage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="viewStart"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        tools:text="홍길동" />

                    <TextView
                        android:id="@+id/bloodTypeTextView_myPage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:textSize="20sp"
                        tools:text="AB형"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/sexTextView_myPage"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="여성" />

                <TextView
                    android:id="@+id/ageTextView_myPage"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/button_shape_round"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="10sp"
                    android:text="카 메 라 ID"
                    android:textAlignment="center"
                    android:textColor="#FFD53C4E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cameraIDTextView_myPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ems="10"
                    android:padding="10sp"
                    android:textColor="#353535"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#B5B5B5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="10sp"
                    android:text="전 화 번 호"
                    android:textAlignment="center"
                    android:textColor="#FFD53C4E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phoneTextView_myPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ems="10"
                    android:padding="10sp"
                    android:textColor="#353535"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/phoneEditTExt_myPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:ems="10"
                    android:padding="10sp"
                    android:textColor="#353535"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#B5B5B5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="10sp"
                    android:text="주      소"
                    android:textAlignment="center"
                    android:textColor="#FFD53C4E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addressTextView_myPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:breakStrategy="simple"
                    android:ems="10"
                    android:padding="10sp"
                    android:textColor="#353535"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/addressEditText_myPage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:breakStrategy="simple"
                    android:visibility="gone"
                    android:ems="10"
                    android:padding="10sp"
                    android:textColor="#353535"
                    android:textSize="20sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#B5B5B5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="10sp"
                    android:text="비상연락처 1"
                    android:textAlignment="center"
                    android:textColor="#FFD53C4E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nokPhone_1_TextView_myPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ems="10"
                    android:padding="10sp"
                    android:textColor="#353535"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nokPhone_1_EditText_myPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="phone"
                    android:padding="10sp"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#B5B5B5" />

            <ImageButton
                android:id="@+id/add_nokphone_button_mypage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_circle"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nokPhone_1_EditText_register"
                app:srcCompat="@drawable/ic_add" />

            <LinearLayout
                android:id="@+id/nokPhone_2_LinearLayout_mypage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="10sp"
                    android:text="비상연락처 2"
                    android:textAlignment="center"
                    android:textColor="#D53C4E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nokPhone_2_TextView_myPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ems="10"
                    android:padding="10sp"
                    android:textColor="#353535"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nokPhone_2_EditText_myPage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="phone"
                    android:padding="10sp"
                    android:textColor="#353535"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/dropNokPhone2Button_myPage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_minus"
                    android:background="#ffffff"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:id="@+id/lineUnderNokPhone2"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#B5B5B5" />

            <android.widget.Button
                android:id="@+id/modifyInfoButton_mypage"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text=" 정보 수정 "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <android.widget.Button
                android:id="@+id/confirmModifyInfoButton_mypage"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:text=" 수정 완료 "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">


                <android.widget.Button
                    android:id="@+id/logoutButton_mypage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="300dp"
                    android:text="로그아웃"
                    android:textColor="#919191"
                    android:textStyle="normal" />

                <android.widget.Button
                    android:id="@+id/signOutButton_mypage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="300dp"
                    android:text="탈퇴하기"
                    android:textColor="#919191"
                    android:textStyle="normal" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>