<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:foregroundTint="#FEFEFE"
    android:orientation="vertical"
    tools:context=".register.AddressActivity">

    <ImageView
        android:id="@+id/logo_register_address"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/app_name_register_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logo_register_address"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="긴급 상황 신고 서비스"
        android:textAlignment="center"
        android:textColor="#F14559"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/addressEditText_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/app_name_register_address"
        android:background="#B1B1B1"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="주소입력"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_home"
        android:drawableTint="#ffffff"
        android:drawablePadding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/addressDeepEditText_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/addressEditText_register"
        android:background="#B1B1B1"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="상세주소"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_home"
        android:drawableTint="#ffffff"
        android:drawablePadding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/continueToEP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="#F14559"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:textSize="27sp"
        android:textStyle="bold" />


</androidx.constraintlayout.widget.ConstraintLayout>